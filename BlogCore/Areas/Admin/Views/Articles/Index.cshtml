@{
	ViewData["Title"] = "Articulos";
}
<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de artículos</h2>
		</div>
		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Crear nuevo artículo</a>
		</div>
	</div>
	<br />
	<br />
	<table id="tblArticles" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th width="5%">Id</th>
				<th width="20%">Title</th>
				<th width="15%">Category</th>
				<th width="15%">Imagen</th>
				<th width="15%">Fecha de creación</th>
				<th width="40%">Acciones</th>
			</tr>
		</thead>
	</table>
</div>

@section Scripts {
	<script src="~/js/article.js"></script>
}