@model BlogCore.Models.Slider

@{
	ViewData["Title"] = "Crear slider";
}

<h3 class="text-center mt-3">Crear slider</h3>
<hr />
<div class="container">
	<div class="row px-2 offset-1">
		<div class="col-12">
			<form method="POST" asp-action="Create" enctype="multipart/form-data">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Name" class="control-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group my-3">
					<label asp-for="Status" class="control-label"></label>
					<input type="checkbox" asp-for="Status" class="form-check-input" />
					<span asp-validation-for="Status" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="UrlImage" class="control-label">Imagen</label>
					<input type="file" name="files" id="uploadFiles" class="form-control" />
					<span asp-validation-for="UrlImage" class="text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<partial name="_CreateBackView" />
				</div>
			</form>
		</div>
	</div>

	@section Scripts {
		@{
			<partial name="_ValidationScriptsPartial" />
		}
	}
