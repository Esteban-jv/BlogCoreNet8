@{
	ViewData["Title"] = "Sliders";
}
<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de sliders</h2>
		</div>
		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Crear nuevo slider</a>
		</div>
	</div>
	<br />
	<br />
	<table id="tblSliders" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th width="5%">Id</th>
				<th width="20%">Nombre</th>
				<th width="15%">Estatus</th>
				<th width="15%">Imagen</th>
				<th width="40%">Acciones</th>
			</tr>
		</thead>
	</table>
</div>

@section Scripts {
	<script src="~/js/sliders.js"></script>
}